<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/noResultsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp"
        android:layout_marginLeft="40dp"
        android:text="@string/no_result"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnNewSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noResultsTxt"
        android:layout_centerHorizontal="true"
        android:text="@string/new_search"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnGPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnNewSearch"
        android:layout_centerHorizontal="true"
        android:text="@string/new_location"
        android:textSize="30sp" />
    
    <fragment
        android:id="@+id/map"
        android:name="com,example.android.gms.maps.MapFragment"
        android:layout_below="@+id/btnGPS"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
